<?xml version="1.0" encoding="utf-8"?>
<com.daohoangson.chaocovietnam.StarView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		>
		<Button
	    	android:id="@+id/btnStart"
	    	android:text="@string/play"
	    	android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	/>
		<TextView
			android:id="@+id/lblLyrics"
			android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent pretium ullamcorper sapien vel consectetur."
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:ellipsize="end"
			android:lines="1"
			android:gravity="center"
			android:textSize="20dip"
			/>
	</LinearLayout>
</com.daohoangson.chaocovietnam.StarView>
