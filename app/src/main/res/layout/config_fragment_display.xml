<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/ccvn_padding">

    <com.daohoangson.chaocovietnam.widget.Display
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ccvn_padding"
        android:layout_marginStart="@dimen/ccvn_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/display_x"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/ccvn_star"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chkShowLyrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_lyrics"
            android:textColor="@color/ccvn_star" />

        <CheckBox
            android:id="@+id/chkShowProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_progress"
            android:textColor="@color/ccvn_star" />

    </LinearLayout>


</LinearLayout>